# Variáveis de ambiente para o projeto Voxy
# Renomeie este arquivo para .env para uso local

# Configurações gerais
DEBUG=True

# Chave secreta para tokens JWT e criptografia
# IMPORTANTE: Gere uma chave segura em produção
SECRET_KEY=sua_chave_secreta_aqui

# Configurações OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Configurações de banco de dados (opcional)
# DATABASE_URL=sqlite:///./voxy.db 

# Chave de API OpenWeatherMap (obrigatória para a ferramenta de clima)
OPENWEATHERMAP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Configurações Supabase (para Mem0)
SUPABASE_URL="sua-url-supabase-aqui"
SUPABASE_SERVICE_ROLE_KEY="sua-chave-service-role-aqui"
# IMPORTANTE: Use esta string de conexão (obtida do Supabase) para Mem0
SUPABASE_CONNECTION_STRING="postgresql://postgres:[SUA-SENHA]@[ENDPOINT-DO-SEU-DB].supabase.co:5432/postgres"

